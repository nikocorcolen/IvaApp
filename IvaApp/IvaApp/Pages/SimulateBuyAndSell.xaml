<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:WorkingWithBehaviors;assembly=WorkingWithBehaviors"
             x:Class="IvaApp.Pages.SimulateBuyAndSell">
  <ScrollView>
    <StackLayout Padding="50" Spacing="10">
      <Label Text="Valor de la Compra:"
             FontSize="Medium"
             FontAttributes="Bold"/>
      <Entry x:Name="valorCompraEntry"
             Placeholder="Compra a Simular"
             Keyboard="Numeric"
             TextColor="White">
      </Entry>
      <Label Text="Valor de la Venta:"
             FontSize="Medium"
             FontAttributes="Bold"/>
      <Entry x:Name="valorVentaEntry"
             Placeholder="Venta a Simular"
             Keyboard="Numeric"
             TextColor="White">
      </Entry>
      <Button x:Name="buttonActualizar"
              Text="Simular IVA"
              TextColor="White"
              BackgroundColor="#fd7d00"
              BorderRadius="0"/>
      <Label x:Name="valorIvaActual"
             Text=""
             Font="20"
             FontAttributes="Bold"
             HorizontalOptions="Center"
             TextColor="Black"/>
    </StackLayout>
  </ScrollView>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IvaApp.Pages.ResumeBuysP">
  <ScrollView>
    <StackLayout Padding="0" Spacing="0">
      <StackLayout Orientation="Horizontal">
        <Label x:Name="Desde"
             Text="Del:"
             TextColor="White"
             FontSize="Medium"/>
        <DatePicker x:Name="desdeDate"/>
        <Label x:Name="Hasta"
             Text="Al:"
             TextColor="White"
             FontSize="Medium"/>
        <DatePicker x:Name="hastaDate"/>
        <Button x:Name="actualizar"
              Image="slideout.png"
              HorizontalOptions="End"/>
      </StackLayout>
      
      <ListView x:Name="buyListView">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding ProductName}"
                      Detail="{Binding Price}" DetailColor="Gray"/>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>
    
      <AbsoluteLayout VerticalOptions="End" HorizontalOptions="End">
          <Button x:Name="nuevo"
              Text="Nueva"
              TextColor="White"
              BackgroundColor="#77D065"/>
      </AbsoluteLayout>


    </StackLayout>
  </ScrollView>
</ContentPage>
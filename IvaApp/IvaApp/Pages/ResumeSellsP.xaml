<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IvaApp.Pages.ResumeSellsP">
  <ScrollView>
    <StackLayout Padding="0" Spacing="0">
      <StackLayout Orientation="Horizontal">
        <Label x:Name="Del:"
             Text="Desde"
             TextColor="White"
             FontSize="Medium"/>
        <DatePicker x:Name="desdeDate"/>
        <Label x:Name="Hasta"
             Text="Al:"
             TextColor="White"
             FontSize="Medium"/>
        <DatePicker x:Name="hastaDate"/>
        <Button x:Name="actualizar"
              Image="slideout.png"
              HorizontalOptions="End"/>
      </StackLayout>
      <ListView x:Name="sellListView">
        <ListView.ItemTemplate>
          <DataTemplate>
            <TextCell Text="{Binding ProductName}"
                      Detail="{Binding Price}" DetailColor="Gray"/>
          </DataTemplate>
        </ListView.ItemTemplate>
      </ListView>

      <AbsoluteLayout VerticalOptions="EndAndExpand">
        <StackLayout>
          <Button x:Name="nuevo"
              Text="Nueva"
              TextColor="White"
              BackgroundColor="#77D065"/>
        </StackLayout>
      </AbsoluteLayout>
    </StackLayout>
  </ScrollView>
</ContentPage>
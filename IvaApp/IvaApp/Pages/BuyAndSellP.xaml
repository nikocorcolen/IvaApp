<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IvaApp.Pages.BuyAndSellP">
  <ScrollView Padding="40">
    <StackLayout VerticalOptions="Center">
      <Button x:Name="resumeBuyButton"
              Text="Compras del Mes"
              TextColor="White"
              BorderRadius="0"  
              BackgroundColor="#fd7d00"/>
      <Button x:Name="resumeSellButton"
              Text="Ventas del Mes"
              TextColor="White"
              BorderRadius="0"  
              BackgroundColor="#fd7d00"/>
      <Button x:Name="detailIvaButton"
              Text="Últimos IVAs"
              TextColor="White"
              BorderRadius="0"
              BackgroundColor="#fd7d00"/>
    </StackLayout>
  </ScrollView>
</ContentPage>